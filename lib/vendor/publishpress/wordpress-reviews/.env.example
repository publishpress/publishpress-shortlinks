# Docker container name
CONTAINER_NAME="library-wordpress-reviews"

# Docker image name
TERMINAL_IMAGE_NAME="publishpress/dev-workspace-terminal:library-wordpress-reviews"

# Path to the cache directory for the dev-workspace
CACHE_PATH="./.cache"

# The slug of the plugin to be tested.
PLUGIN_SLUG="library-wordpress-reviews"

# The locales we support for translations.
LANG_LOCALES="pt_BR"

# The domain of the plugin to be tested.
LANG_DOMAIN="library-wordpress-reviews"

# The directory of the language files.
LANG_DIR="languages"

# OpenAI API key for AI-assisted translation suggestions
OPENAI_API_KEY=sk-proj-your-openai-key

# Weblate API token for automated translation uploads/downloads
WEBLATE_API_TOKEN=wlu_your-weblate-token